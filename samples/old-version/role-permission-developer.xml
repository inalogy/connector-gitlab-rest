<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
      xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
      xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
      oid="21ab0054-3d64-44d6-ac87-d90e844591f9">
    <name>developer</name>
    <assignment>
        <targetRef oid="8c177712-cdd5-4ab1-a89c-0e957951dae2"
                   type="c:RoleType"><!-- Metarole for Role --></targetRef>
        <activation>
            <effectiveStatus>enabled</effectiveStatus>
        </activation>
    </assignment>
    <roleMembershipRef oid="8c177712-cdd5-4ab1-a89c-0e957951dae2"
                       type="c:RoleType"><!-- Metarole for Role --></roleMembershipRef>
    <inducement>
        <description>Assign user to the group as developer</description>
        <construction>
            <resourceRef oid="1c151bec-fa20-4097-bc64-0462ab2e5b7a"
                         type="c:ResourceType"><!-- Gitlab --></resourceRef>
            <kind>account</kind>
            <intent>default</intent>
            <association>
                <c:ref>ri:Group-developer</c:ref>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <name>orgUnit</name>
                        <c:path>$assignment/c:orgRef</c:path>
                    </source>
                    <expression>
                        <associationTargetSearch xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                                                 xsi:type="c:SearchObjectExpressionEvaluatorType">
                            <filter>
                                <q:equal>
                                    <q:path>attributes/icfs:name</q:path>
                                    <expression>
                                        <script>
                                            <code>
                                                org = midpoint.getOrgByOid(orgUnit.getOid())
                                                return org.getName()
                                            </code>
                                        </script>
                                    </expression>
                                </q:equal>
                            </filter>
                            <searchStrategy>onResourceIfNeeded</searchStrategy>
                        </associationTargetSearch>
                    </expression>
                </outbound>
            </association>
        </construction>
        <order>1</order>
        <focusType>UserType</focusType>
        <condition>
            <source>
                <name>orgUnit</name>
                <c:path>$assignment/c:orgRef</c:path>
            </source>
            <expression>
                <script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:type="c:ScriptExpressionEvaluatorType">
                    <code>
                        if(orgUnit != null){
                            org = midpoint.getOrgByOid(orgUnit.getOid())
                            types = org.getOrgType()
                            if(types.contains('group')){
                                return true
                            }
                        }
                        return false;
                    </code>
                </script>
            </expression>
        </condition>
    </inducement>
    <inducement>
        <description>Assign user to the project as developer</description>
        <construction>
            <resourceRef xmlns:org="http://midpoint.evolveum.com/xml/ns/public/common/org-3"
                         oid="1c151bec-fa20-4097-bc64-0462ab2e5b7a"
                         relation="org:default"
                         type="c:ResourceType"><!-- Gitlab --></resourceRef>
            <kind>account</kind>
            <intent>default</intent>
            <association>
                <c:ref>ri:Project-developer</c:ref>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <name>orgUnit</name>
                        <c:path>$assignment/c:orgRef</c:path>
                    </source>
                    <expression>
                        <associationTargetSearch xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                                                 xsi:type="c:SearchObjectExpressionEvaluatorType">
                            <filter>
                                <q:equal>
                                    <q:path>attributes/icfs:name</q:path>
                                    <expression>
                                        <script>
                                            <code>
                                                org = midpoint.getOrgByOid(orgUnit.getOid())
                                                return org.getName()
                                            </code>
                                        </script>
                                    </expression>
                                </q:equal>
                            </filter>
                            <searchStrategy>onResourceIfNeeded</searchStrategy>
                        </associationTargetSearch>
                    </expression>
                </outbound>
            </association>
        </construction>
        <order>1</order>
        <focusType>UserType</focusType>
        <condition>
            <source>
                <name>orgUnit</name>
                <c:path>$assignment/c:orgRef</c:path>
            </source>
            <expression>
                <script xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:type="c:ScriptExpressionEvaluatorType">
                    <code>
                        if(orgUnit != null){
                            org = midpoint.getOrgByOid(orgUnit.getOid())
                            types = org.getOrgType()
                            if(types.contains('project')){
                                return true
                            }
                        }
                        return false
                    </code>
                </script>
            </expression>
        </condition>
    </inducement>
</role>
